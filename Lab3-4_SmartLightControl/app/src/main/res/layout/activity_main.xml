<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/background"
    android:background="@android:color/darker_gray">

    <Button
        android:id="@+id/toggleLightButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn Light On/Off"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/customModeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom Mode"
        android:layout_below="@id/autoModeSwitch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />


    <Switch
        android:id="@+id/autoModeSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Automatic Mode"
        android:layout_below="@id/toggleLightButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

</RelativeLayout>
